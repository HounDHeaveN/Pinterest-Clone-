<% include ./partials/header.ejs %>

<div class="w-full h-screen bg-zinc-500 flex items-center justify-center">
  <div class="w-[30vw] h-[90vh] bg-white px-20 py-11 rounded-[30px]">
    <h1 class="text-3xl text-center text-zinc-700 tracking-tighter leading-none font-semibold">Welcome to Pinterest</h1>
    <form action="/login" method="post">
      <input class="border-2 rounded-[15px] block mt-5 w-full px-3 py-2" type="text" name="username" placeholder="Email">
      <input class="border-2 rounded-[15px] block mt-2 w-full px-3 py-2" type="password" name="password" placeholder="Password">
      <a class="mt-2 inline-block text-sm font-medium text-zinc-700" href="#">Forgot your password?</a>
      <input class="border-2 block font-semibold mt-5 w-full px-3 py-2 bg-red-600 text-white rounded-full" type="submit" value="Log in">
      <a class="w-full block font-semibold mt-2 mb-2 text-center" href="#">OR</a>
      <input class="border-2 block font-semibold  w-full px-3 py-2 bg-blue-600 text-white rounded-full" type="submit" value="Continue with Facebook">
      <input class="border-2 block mt-3 w-full px-3 py-2 bg-white text-zinc-700 rounded-full" type="submit" value="Continue with Google">
      <p class="text-xs text-zinc-400 mt-24 w-3/4 text-center mx-auto">By continuing, you agree to Pinterest's <span class="text-zinc-900 font-semibold">Terms of Service</span>; Opens a new tab and acknowledge you've read our <span class="text-zinc-900 font-semibold">Privacy Policy;</span></p>
      <a class="w-full inline-block font-semibold text-sm mt-2 text-center" href="/register">Not on Pinterest yet? Sign up</a>

      
    </form>
  </div>
</div>

<% include ./partials/footer.ejs %>
